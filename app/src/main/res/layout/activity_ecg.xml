<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_append"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start" />
    <!--<com.ng.ui.view.EcgShowView-->
    <!--android:layout_centerInParent="true"-->
    <!--android:id="@+id/ecgview"-->
    <!--android:layout_margin="10dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="200dp" />-->
    <com.ng.nguilib.EcgShowJavaView
        android:id="@+id/ecgview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:visibility="gone" />

    <com.ng.ui.HeartBeatView
        android:id="@+id/heartView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:cus_density="2"
        app:cus_grid_color="#388E3C"
        app:cus_grid_width="0.3dp"

        app:cus_grid_zero_color="@color/colorAccent"
        app:cus_heart_line_color="#E64A19"
        app:cus_max_value="50"
        app:cus_show_grid="true" />


</LinearLayout>